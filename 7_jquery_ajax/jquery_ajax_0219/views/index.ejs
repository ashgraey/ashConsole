                    success: function(data) {
                        var result = JSON.stringify(data);
                        alert("result = " + result);

                        if(data == "no") {
                            window.location.href="/";
                        } else if(data == "yes"){
                          //  window.location.href="/cartInfo";
                        }
                    }
                });
            });
         });
    </script>
</head>
<body>
    <div align="center">
        <a href="/">
            <img alt="메인로고" src="logo.png" height="90px">
        </a>
    </div>
    <br><br>
    <div id="menu" align="center">
        <div id="delete" align="center">
            <% if(log == null) { %>
                <span style="color: red;">로그아웃 상태</span>&nbsp;&nbsp;&nbsp;
                <button onclick="location.href='memberJoin'">회원가입</button>&nbsp;&nbsp;&nbsp;
