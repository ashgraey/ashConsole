            <% } else { %>
                <%= log %> 로그인&nbsp;&nbsp;&nbsp;
                <button id='memberLogout'>로그아웃</button>&nbsp;&nbsp;&nbsp;
            <% } %>
            <button onclick="location.href='bookAllList'">전체 상품 목록</button>&nbsp;&nbsp;&nbsp;
            <button onclick="location.href='cartInfo'">장바구니</button>&nbsp;&nbsp;&nbsp;
        </div>
    </div>

</body>
</html>